{
  "name": "youtube-tv",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postbuild": "node scripts/verify-standalone.js",
    "postpack": "node scripts/ensure-node-modules-in-package.js && node scripts/verify-packaged.js",
    "prebuild:electron": "node scripts/ensure-complete-build.js",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "next build && npm run postbuild && electron-builder",
    "prepack:electron": "node scripts/ensure-node-modules-in-package.js",
    "electron:build:win": "npm run build && npm run postbuild && npm run prepack:electron && electron-builder --win",
    "dist": "npm run electron:build:win"
  },
  "dependencies": {
    "@react-three/drei": "^9.121.3",
    "@react-three/fiber": "^8.17.12",
    "better-sqlite3": "^12.5.0",
    "firebase": "^12.3.0",
    "json-server": "^0.17.4",
    "lucide-react": "^0.441.0",
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-window": "^2.2.0",
    "three": "^0.175.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^8",
    "eslint-config-next": "^16.0.7",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10"
  },
  "description": "YouTube TV - Desktop App",
